pipeline {
    agent any
    stages { 
        stage('Build') {
            steps {
                sh "make clean"
                sh "make all"
            }
        }
        stage('Test') {
            steps {
                sh "make test"
            }
        }
        stage('Results') {
            steps {
                junit 'out/bin/results_junit.xml'
                archiveArtifacts 'out/bin/main'
            }
        }
    }
}
