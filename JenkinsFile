pipeline {
    agent {
        docker { image 'praqma/native-gradle' }
    }
    stages {
        stage('Build') {
            steps {
                sh "make clean"
                sh "gradlew publishToMavenLocal"
            }
        }
        stage('Results') {
            steps {
                junit 'out/bin/results_junit.xml'
                archiveArtifacts 'out/bin/main'
            }
        }
    }
}
